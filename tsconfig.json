{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@voomap/core": ["./packages/core/src/index.ts"],
      "@voomap/map": ["./packages/map/src/index.ts"],
      "@voomap/shared": ["./packages/shared/src/index.ts"]
    },
    "resolveJsonModule": true,
    "types": ["node", "vite/client", "google.maps"],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**"
  ]
}
